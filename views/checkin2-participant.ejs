<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Table Check-In</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #1a1625 0%, #2d1b3d 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .header {
            background: linear-gradient(135deg, #7c3aed 0%, #a855f7 100%);
            padding: 30px 20px;
            text-align: center;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }

        .header h1 {
            color: white;
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .header p {
            color: rgba(255, 255, 255, 0.9);
            font-size: 16px;
        }

        .content {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        .info-card {
            background: white;
            border-radius: 12px;
            padding: 30px;
            margin-bottom: 20px;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }

        .info-card h2 {
            color: #7c3aed;
            margin-bottom: 15px;
            font-size: 20px;
        }

        .info-card p {
            color: #6b7280;
            line-height: 1.6;
            margin-bottom: 10px;
        }

        .scanner-container {
            width: 100%;
            max-width: 500px;
            position: relative;
        }

        #video {
            width: 100%;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
        }

        .scan-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 250px;
            height: 250px;
            border: 3px solid #10b981;
            border-radius: 12px;
            pointer-events: none;
            box-shadow: 0 0 0 9999px rgba(0, 0, 0, 0.5);
        }

        .scan-corners {
            position: absolute;
            width: 30px;
            height: 30px;
            border: 4px solid #10b981;
        }

        .corner-tl {
            top: -3px;
            left: -3px;
            border-right: none;
            border-bottom: none;
        }

        .corner-tr {
            top: -3px;
            right: -3px;
            border-left: none;
            border-bottom: none;
        }

        .corner-bl {
            bottom: -3px;
            left: -3px;
            border-right: none;
            border-top: none;
        }

        .corner-br {
            bottom: -3px;
            right: -3px;
            border-left: none;
            border-top: none;
        }

        .result-modal {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 40px;
            border-radius: 16px;
            text-align: center;
            min-width: 350px;
            max-width: 90%;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
            display: none;
            z-index: 1000;
        }

        .result-modal.show {
            display: block;
            animation: slideIn 0.3s ease;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translate(-50%, -60%);
            }

            to {
                opacity: 1;
                transform: translate(-50%, -50%);
            }
        }

        .result-icon {
            font-size: 60px;
            margin-bottom: 20px;
        }

        .result-modal h2 {
            color: #10b981;
            margin-bottom: 10px;
            font-size: 24px;
        }

        .result-message {
            color: #6b7280;
            margin-top: 10px;
            font-size: 16px;
        }

        .error-modal {
            background: #fef2f2;
            border: 2px solid #dc2626;
        }

        .error-modal h2 {
            color: #dc2626;
        }

        .button {
            display: inline-block;
            background: linear-gradient(135deg, #7c3aed 0%, #a855f7 100%);
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 20px;
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div class="header">
        <h1>üìç Table Check-In (Step 2)</h1>
        <p>Scan the QR code at your assigned table</p>
        <p>Team: <%= teamName %></p>
        <p>Table: <%= tableNumber %>, Room: <%= roomNumber %></p>
    </div>

    <div class="content">
        <div class="info-card">
            <h2>Instructions</h2>
            <p>1. Locate the QR code at your assigned table</p>
            <p>2. Position it within the scanning frame below</p>
            <p>3. Wait for automatic detection</p>
            <p>4. You'll see a confirmation once complete</p>
        </div>

        <div class="scanner-container">
            <video id="video" autoplay playsinline></video>
            <div class="scan-overlay">
                <div class="scan-corners corner-tl"></div>
                <div class="scan-corners corner-tr"></div>
                <div class="scan-corners corner-bl"></div>
                <div class="scan-corners corner-br"></div>
            </div>
        </div>
    </div>

    <div id="resultModal" class="result-modal">
        <div class="result-icon" id="resultIcon">‚úÖ</div>
        <h2 id="resultTitle">Check-In Complete!</h2>
        <p class="result-message" id="resultMessage">You're all set. Good luck with your project!</p>
        <a href="#" class="button" id="closeButton">Close</a>
    </div>

    <script src="https://unpkg.com/@zxing/library@latest"></script>
    <script>
        const video = document.getElementById('video');
        const resultModal = document.getElementById('resultModal');
        const resultIcon = document.getElementById('resultIcon');
        const resultTitle = document.getElementById('resultTitle');
        const resultMessage = document.getElementById('resultMessage');
        const closeButton = document.getElementById('closeButton');

        let isProcessing = false;
        let codeReader = null;
        const teamEmail = '<%= teamEmail %>';

        async function startScanner() {
            try {
                codeReader = new ZXing.BrowserQRCodeReader();
                const devices = await codeReader.listVideoInputDevices();

                if (devices.length === 0) {
                    showError('No camera found. Please enable camera access.');
                    return;
                }

                const selectedDevice = devices[0].deviceId;

                codeReader.decodeFromVideoDevice(selectedDevice, 'video', async (result, err) => {
                    if (result && !isProcessing) {
                        isProcessing = true;
                        await handleQRCode(result.text);
                    }
                });
            } catch (err) {
                console.error('Scanner error:', err);
                showError('Failed to start camera. Please check permissions.');
            }
        }

        async function handleQRCode(qrData) {
            try {
                const response = await fetch('/api/checkin2', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ teamEmail, tableQRData: qrData })
                });

                const data = await response.json();

                if (data.success) {
                    showSuccess(data.message);
                    if (codeReader) {
                        codeReader.reset();
                    }
                } else {
                    showError(data.message || 'Check-in failed');
                    isProcessing = false;
                }
            } catch (err) {
                console.error('Check-in error:', err);
                showError('Connection error. Please try again.');
                isProcessing = false;
            }
        }

        function showSuccess(message) {
            resultModal.classList.remove('error-modal');
            resultIcon.textContent = '‚úÖ';
            resultTitle.textContent = 'Check-In Complete!';
            resultMessage.textContent = message;
            resultModal.classList.add('show');
        }

        function showError(message) {
            resultModal.classList.add('error-modal');
            resultIcon.textContent = '‚ùå';
            resultTitle.textContent = 'Error';
            resultMessage.textContent = message;
            closeButton.textContent = 'Try Again';
            resultModal.classList.add('show');
        }

        closeButton.addEventListener('click', (e) => {
            e.preventDefault();
            resultModal.classList.remove('show');
            if (!isProcessing) {
                startScanner();
            }
        });

        startScanner();
    </script>
</body>

</html>